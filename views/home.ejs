<html>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/home.css">
    <script src="https://kit.fontawesome.com/64ac5a41e2.js" crossorigin="anonymous"></script>
    <body>
        <h1>
            <i class="fas fa-mug-hot"></i>
            ToDo List
        </h1>
        <div>
            <ul>
                <%for(let i of list){ %>
                    <li>
                        <p><%=i.name%></p>
                        <a href="/delete-contact/?id=<%= i._id %> " > <i class="fas fa-window-close"> </i></a>
                    </li>
                <%}%>
            </ul>
        </div>
        <form action="/submit" method="POST">
            <input type="text" name="name" placeholder="ENTER TASK TO BE DONE" required>
           
            <button>ADD TO LIST</button>

        </form>
    </body>
</html>